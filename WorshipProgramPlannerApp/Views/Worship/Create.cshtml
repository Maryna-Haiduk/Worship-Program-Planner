@using Microsoft.AspNetCore.Mvc.Localization
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer


@model WorshipProgramPlannerApp.Models.Worship

@{
    ViewData["Title"] = "Create Worship";
}

<h2>@Localizer["AddingWorshipToList"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorshipDate" class="control-label"><b>@Localizer["WriteDate"]</b></label>
                <input asp-for="WorshipDate" class="form-control" />
                <span asp-validation-for="WorshipDate" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="WorshipName" class="control-label"><b>@Localizer["WriteName"]</b></label>
                <input asp-for="WorshipName" class="form-control" />
                <span asp-validation-for="WorshipName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input asp-action="Create" type="submit" value="@Localizer["AddButtonText"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}